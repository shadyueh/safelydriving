<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Body1" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="Headline" parent="Base.TextAppearance.AppCompat.Headline">
    </style>

    <style name="CardTitle" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:padding" >20dp</item>
        <item name="android:layout_gravity">bottom|left</item>
        <item name="android:background">@drawable/gradient1</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CardOpenIcon">
        <item name="android:padding" >15dp</item>
        <item name="android:layout_gravity">bottom|right</item>
    </style>

</resources>
